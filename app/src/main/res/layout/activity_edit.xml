<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Ajouter un magasin :"
        android:textSize="40sp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/activity_edit_name_textview"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Nom :"
        android:gravity="left"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/activity_edit_name_editview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Saisir le nom"/>

    <TextView
        android:id="@+id/activity_edit_adress_textview"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Adresse :"
        android:gravity="left"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/activity_edit_adress_editview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Saisir l'adresse"/>

    <TextView
        android:id="@+id/activity_edit_phone_textview"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Téléphone :"
        android:gravity="left"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/activity_edit_phone_editview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Saisir le numéro de téléphone"
        />

    <TextView
        android:id="@+id/activity_edit_country_textview"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Pays :"
        android:gravity="left"
        android:textSize="30sp"/>

    <Spinner
        android:id="@+id/activity_edit_country_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:spinnerMode="dialog"/>

    <Button
        android:id="@+id/activity_edit_add_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Ajouter"/>

</LinearLayout>